{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "commitMessageTopic": "{{depName}}",
  "automergeType": "branch",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["^@zag-js/"],
      "enabled": false
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
