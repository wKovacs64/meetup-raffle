{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "commitMessageTopic": "{{depName}}",
  "automergeType": "branch",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*remix-pwa.*"],
      "groupName": "remix-pwa"
    },
    {
      "matchPackagePrefixes": ["@zag-js/"],
      "groupName": "zag-js"
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
